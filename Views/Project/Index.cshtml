
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Message != null)
{
    <partial name="Message" />
}
<style>
    button-beauty{
        width: 15px;
    }
</style>
<div class="col-lg-12">

    <!-- /.card -->
    <div class="card">

        <div class="card-header border-0">
            <button class="btn btn-primary" style="border-radius:20px 5px;" type="button" onclick="location.href='@Url.Action("Create", "Project")'"><b>Create</b></button>
            <hr />
            <center>  <h1 class="card-title"><b>Project List</b></h1></center>
            <hr />
        </div>
        <div class="card-body table-responsive p-0">
            <table class="table table-striped table-valign-middle">

                <thead>
                    <tr>
                        <th>
                            Sl No
                        </th>
                        <th>
                            @Html.DisplayName("Project Name")
                        </th>
                        <th>
                            @Html.DisplayName("Project Initial Budget")
                        </th>
                        <th>
                            @Html.DisplayName("Project Final Budget")
                        </th>
                        <th>
                            @Html.DisplayName("Project Start Date")
                        </th>
                        <th>
                            @Html.DisplayName("Project End Date")
                        </th>
                        <th>
                            @Html.DisplayName("Project Description")
                        </th>
                        <th>
                            @Html.DisplayName("Project Attachment")
                        </th>
                        <th>
                            @Html.DisplayName("Bureau Name")
                        </th>
                        <th>
                            @Html.DisplayName("Action")
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 0;}
                    @foreach (var item in @ViewBag.Project)
                    {
                        bool isExpired = (DateTime.Now > item.ProjectEndDate) ? true : false;
                        if (isExpired)
                        {
                            <tr style="color: red;">
                                <td>
                                    @{ i++;}
                                    @i
                                </td>
                                <td>
                                    @item.ProjectName
                                </td>
                                <td>
                                    <b>@item.initialBudget</b>BDT
                                </td>
                                <td>
                                    <b>@item.finalBudget</b>BDT
                                </td>
                                <td>
                                    @item.ProjectStartDate.ToString("MMM dd, yyyy")
                                </td>
                                    <td>
                                        @item.ProjectEndDate.ToString("MMM dd, yyyy")
                                    </td>


                                <td>
                                    @item.ProjectDescription
                                </td>
                                @if (item.ProjectAttachment == null)
                                {
                                    <td style="color: red">No Attachment Found!</td>
                                }
                                else
                                {
                                    <td>
                                        <a class="btn btn-outline-primary" href="/File/ProjectAttachment/@item.ProjectAttachment" target="_blank">Attachment</a>
                                    </td>
                                }

                                <td>
                                    @item.BureauName
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.ProjectId" 
                                       class="btn btn-outline-info" style="width: 80px;">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.ProjectId" 
                                       class="btn btn-outline-success" style="width: 80px;">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.ProjectId" 
                                       class="btn btn-outline-danger" style="width: 80px;">Delete</a>
                                </td>
                            </tr>
                        }
                        else
                        {
                <tr>
                    <td>
                        @{ i++;}
                        @i
                    </td>
                    <td>
                        @item.ProjectName
                    </td>
                    <td>
                        <b>@item.initialBudget</b>BDT
                    </td>
                    <td>
                        <b>@item.finalBudget</b>BDT
                    </td>
                    <td>
                        @item.ProjectStartDate.ToString("MMM dd, yyyy")
                    </td>
                    @if (DateTime.Now > item.ProjectEndDate)
                    {
                        <td style="color: orangered">
                            @item.ProjectEndDate.ToString("MMM dd, yyyy")
                        </td>
                    }
                    else
                    {
                        <td>
                            @item.ProjectEndDate.ToString("MMM dd, yyyy")
                        </td>

                    }
                    <td>
                        @item.ProjectDescription
                    </td>
                    @if (item.ProjectAttachment == null)
                    {
                        <td style="color: red">No Attachment Found!</td>
                    }
                    else
                    {
                        <td>
                            <a class="btn btn-outline-primary" href="/File/ProjectAttachment/@item.ProjectAttachment" target="_blank">Attachment</a>
                        </td>
                    }

                    <td>
                        @item.BureauName
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProjectId"
                           class="btn btn-outline-info" style="width: 80px;">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.ProjectId"
                           class="btn btn-outline-success" style="width: 80px;">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.ProjectId"
                           class="btn btn-outline-danger" style="width: 80px;">Delete</a>
                    </td>
                </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- /.card -->
</div>
