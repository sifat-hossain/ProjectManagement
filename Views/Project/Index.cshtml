
@{
    ViewData["Title"] = "Project List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Message != null)
{
    <partial name="Message" />
}
<style>
    button-beauty {
        width: 15px;
    }
</style>
<div class="col-lg-12">

    <!-- /.card -->
    <div class="card ">

        <div class="card-header border-0 " >           
            <center>  <h1 class="card-title"><b>Project List</b></h1></center>
            <hr />
        </div>
        <div class="card-body border-0 rounded">
            <button class="btn btn-primary" style="border-radius:20px 5px;" type="button"
                    onclick="location.href='@Url.Action("Create", "Project")'">
                <i class="fas fa-plus-square"></i>
                <b>New Project</b>
            </button><hr />
            <table class="table table-striped table-valign-middle table-responsive-md" id="projectTable">

                <thead>
                    <tr>
                        <th>
                            Sl.
                        </th>
                        <th>
                            @Html.DisplayName("Item Name")
                        </th>
                        <th>
                            @Html.DisplayName("PGD/ PWD No")
                        </th>
                        <th>
                            @Html.DisplayName("Lot No")
                        </th>
                        <th>
                            @Html.DisplayName("RDPP Budget")
                        </th>
                        @*<th>
                        @Html.DisplayName("Project Start Date")
                    </th>
                    <th>
                        @Html.DisplayName("Project End Date")
                    </th>*@
                        <th>
                            @Html.DisplayName("Description")
                        </th>
                        <th>
                            @Html.DisplayName("Attachment")
                        </th>
                        <th>
                            @Html.DisplayName("User")
                        </th>
                        <th>
                            @Html.DisplayName("Action")
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 0;}
                    @foreach (var item in @ViewBag.Project)
                    {
                        bool isExpired = (DateTime.Now > item.ProjectEndDate) ? true : false;
                        if (isExpired)
                        {
                            <tr style="color: red;">
                                <td>
                                    @{ i++;}
                                    @item.ProjectId
                                </td>
                                <td>
                                    @item.ProjectName
                                </td>
                                @*<td>
                                <b>@item.initialBudget</b>BDT
                            </td>
                            <td>
                                <b>@item.finalBudget</b>BDT
                            </td>*@
                                <td>
                                    @item.PgdNo
                                </td>
                                <td>
                                    @item.LotNo
                                </td>
                                <td>
                                    <b>@item.rdppBudget</b>BDT
                                </td>

                                @*<td>
                                @item.ProjectStartDate.ToString("MMM dd, yyyy")
                            </td>
                            <td>
                                @item.ProjectEndDate.ToString("MMM dd, yyyy")
                            </td>*@


                                <td>
                                    @item.ProjectDescription
                                </td>
                                @if (item.ProjectAttachment == null)
                                {
                                    <td style="color: red">No Attachment Found!</td>
                                }
                                else
                                {
                                    <td>
                                        <a class="btn btn-outline-primary" href="/File/ProjectAttachment/@item.ProjectAttachment" target="_blank">Attachment</a>
                                    </td>
                                }

                                <td>
                                    @item.BureauName
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.ProjectId"
                                       class="btn btn-outline-info" style="width: 95px;"><i class="fas fa-edit"></i>Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.ProjectId"
                                       class="btn btn-outline-success" style="width: 95px;">
                                        <i class="fas fa-link"></i>
                                        Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ProjectId"
                                       class="btn btn-outline-danger" style="width: 95px;">
                                        <i class="fas fa-trash"></i>
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td>
                                    @{ i++;}
                                    @item.ProjectId
                                </td>
                                <td>
                                    @item.ProjectName
                                </td>
                                @*<td>
                                <b>@item.initialBudget</b>BDT
                            </td>
                            <td>
                                <b>@item.finalBudget</b>BDT
                            </td>*@
                                <td>
                                    @item.PgdNo
                                </td>
                                <td>
                                    @item.LotNo
                                </td>
                                <td>
                                    <b>@item.rdppBudget</b>BDT
                                </td>

                                @*<td>
                                @item.ProjectStartDate.ToString("MMM dd, yyyy")
                            </td>
                            <td>
                                @item.ProjectEndDate.ToString("MMM dd, yyyy")
                            </td>*@


                                <td>
                                    @item.ProjectDescription
                                </td>
                                @if (item.ProjectAttachment == null)
                                {
                                    <td style="color: red">No Attachment Found!</td>
                                }
                                else
                                {
                                    <td>
                                        <a class="btn btn-outline-primary" href="/File/ProjectAttachment/@item.ProjectAttachment" target="_blank">
                                            <i class="fas fa-paperclip"></i>Attachment
                                        </a>
                                    </td>
                                }

                                <td>
                                    @item.BureauName
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.ProjectId"
                                       class="btn btn-outline-info" style="width: 95px;"><i class="fas fa-edit"></i>Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.ProjectId"
                                       class="btn btn-outline-success" style="width: 95px;">
                                        <i class="fas fa-link"></i>
                                        Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ProjectId"
                                       class="btn btn-outline-danger" style="width: 95px;"><i class="fas fa-trash"></i>Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- /.card -->
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#projectTable').DataTable();
        });
    </script>
}