

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Message != null)
{
    <partial name="Message" />
}
<div class="col-lg-12">

    <!-- /.card -->
    <div class="card">

        <div class="card-header border-0">
            <button class="btn btn-primary" style="border-radius:20px 5px;" type="button" onclick="location.href='@Url.Action("Create", "TenderOpening")'"><b>Create</b></button>
            <hr />
            <center>  <h1 class="card-title"><b>Tender Opening List</b></h1></center>
            <hr />
        </div>
        <div class="card-body table-responsive p-0">
            <table class="table table-striped table-valign-middle">
                <thead>
                    <tr>
                        <th>
                            Sl
                        </th>
                        <th>
                            @Html.DisplayName("Project")
                        </th>
                        <th>
                            @Html.DisplayName("Opening Date")
                        </th>
                        <th>
                            @Html.DisplayName("Closing Date")
                        </th>
                        <th>
                            @Html.DisplayName("Tender Honorium")
                        </th>
                        <th>
                            @Html.DisplayName("Attachment")
                        </th>

                        <th>
                            @Html.DisplayName("Action")
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 0;}
                    @foreach (var item in @ViewBag.TenderOpening)
                    {
                        <tr>
                            <td>
                                @{ i++;}
                                @i
                            </td>
                            <td>
                                @item.ProjectName
                            </td>
                            <td>
                                @item.TenderOpeningDate.ToString("MMM dd, yyyy")
                            </td>
                            <td>
                                @item.TenderClosingDate.ToString("MMM dd, yyyy")
                            </td>
                            <td>
                                @item.TenderHonorium
                            </td>
                            @if (item.TenderOpeningAttachment == null)
                            {
                                <td style="color: red">No Attachment Found!</td>
                            }
                            else
                            {
                                <td>
                                    <a class="btn btn-outline-primary" href="/File/TenderOpeningAttachment/@item.TenderOpeningAttachment" target="_blank">Attachment</a>
                                </td>
                            }
                            <td>
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.TenderOpeningId"
                                   class="btn btn-outline-info" style="width: 75px;">Edit</a> 
                                <a asp-action="Details" asp-route-id="@item.TenderOpeningId"
                                   class="btn btn-outline-success" style="width: 75px;">Details</a> 
                                <a asp-action="Delete" asp-route-id="@item.TenderOpeningId"
                                   class="btn btn-outline-danger" style="width: 75px;">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- /.card -->
</div>