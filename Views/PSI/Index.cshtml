

@{
    ViewData["Title"] = "PSI";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-lg-12">

    <!-- /.card -->
    <div class="card">

        <div class="card-header border-0">
            <button class="btn btn-primary" style="border-radius:20px 5px;" type="button" onclick="location.href='@Url.Action("Create", "PSI")'"><b>Create</b></button>
            <hr />
            <center>  <h1 class="card-title"><b>PSI List</b></h1></center>

            <hr />
        </div>
        <div class="card-body table-responsive p-0">
            <table class="table table-striped table-valign-middle">
                <thead>
                    <tr>
                        <th>
                            Sl No
                        </th>
                        <th>
                            @Html.DisplayName("Project")
                        </th>
                        <th>
                            @Html.DisplayName("Psi Location")
                        </th>
                        <th>
                            @Html.DisplayName("Start Date")
                        </th>
                        <th>
                            @Html.DisplayName("End Date")
                        </th>
                        <th>
                            @Html.DisplayName("Duration")
                        </th>
                        <th>
                            @Html.DisplayName("Attachment")
                        </th>

                        <th>
                            @Html.DisplayName("Action")
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 0;}
                    @foreach (var item in @ViewBag.PsiList)
                    {
                    <tr>
                        <td>
                            @{ i++;}
                            @i
                        </td>
                        <td>
                            @item.ProjectName
                        </td>
                        <td>
                            @item.PsiLocation
                        </td>
                        <td>
                            @item.PsiStartDate.ToString("MMM dd, yyyy")
                        </td>
                        <td>
                            @item.PsiEndDate.ToString("MMM dd, yyyy")
                        </td>
                        <td>
                            @item.PsiDuration Days
                        </td>
                        @if (item.PsiAttachment == null)
                        {
                            <td style="color: red">No Attachment Found!</td>

                        }
                        else
                        {
                            <td>
                                <a class="btn btn-outline-primary" href="/File/PSIAttachment/@item.PsiAttachment" target="_blank">Attachment</a>
                            </td>
                        }


                        <td>
                            <a asp-action="Edit" asp-route-id="@item.PsiId"
                               class="btn btn-outline-info" style="width: 70px;">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.PsiId"
                               class="btn btn-outline-success" style="width: 75px;">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.PsiId"
                               class="btn btn-outline-danger" style="width: 70px;">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
    <!-- /.card -->
</div>