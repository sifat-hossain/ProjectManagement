
@{
    ViewData["Title"] = "PI";
    Layout = "~/Views/Shared/_Layout.cshtml";
   
    }

    @if (ViewBag.Message != null)
    {
        <partial name="Message" />
    }
    <div class="col-lg-12">

        <!-- /.card -->
        <div class="card">

            <div class="card-header border-0">
                <button class="btn btn-primary" style="border-radius:20px 5px;" type="button" onclick="location.href='@Url.Action("Create", "PI")'"><b>Create</b></button>
                <hr />
                <center>  <h1 class="card-title"><b>PI List</b></h1></center>
                <hr />
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-striped table-valign-middle">
                    <thead>
                        <tr>
                            <th>
                                Sl
                            </th>

                            <th>
                                @Html.DisplayName("Project")
                            </th>
                            <th>
                                @Html.DisplayName("PI Date")
                            </th>
                            <th>
                                @Html.DisplayName("Attachment")
                            </th>
                            <th>
                                @Html.DisplayName("Action")
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 0;}
                        @foreach (var item in @ViewBag.listOfData)
                        {
                            <tr>
                                <td>
                                    @{ i++;}
                                    @i
                                </td>

                                <td>
                                    @item.ProjectName
                                </td>

                                <td>
                                    @item.Pidate.ToString("MMM dd, yyyy")
                                </td>

                                @if (item.PiAttachment == null)
                                {
                                    <td style="color: red">No Attachment Found!</td>
                                }
                                else
                                {
                                    <td>
                                        <a class="btn btn-outline-primary" href="/File/PIAttachment/@item.PiAttachment" target="_blank">Attachment</a>
                                    </td>
                                }

                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.PiId"
                                   class="btn btn-outline-info" style="width: 70px;">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.PiId"
                                   class="btn btn-outline-success" style="width: 75px;">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.PiId"
                                   class="btn btn-outline-danger" style="width: 70px;">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.card -->
    </div>
