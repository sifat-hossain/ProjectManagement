
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Message != null)
{
    <partial name="Message" />
}
<div class="col-lg-12">

    <!-- /.card -->
    <div class="card">

        <div class="card-header border-0">
            <button class="btn btn-primary" style="border-radius:20px 5px;" type="button" onclick="location.href='@Url.Action("Create", "Designation")'"><b>Create</b></button>
            <hr />
            <center>  <h1 class="card-title"><b>Designation List</b></h1></center>
            @*<div class="card-tools">
                    <a href="#" class="btn btn-tool btn-sm">
                        <i class="fas fa-download"></i>
                    </a>
                    <a href="#" class="btn btn-tool btn-sm">
                        <i class="fas fa-bars"></i>
                    </a>
                </div>*@

            <hr />
        </div>
        <div class="card-body table-responsive p-0">
            <table class="table table-striped table-valign-middle">
                <thead>
                    <tr>
                        <th>
                            Sl No
                        </th>
                        <th>
                            @Html.DisplayName("Designation Name")
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 0;}
                    @foreach (var item in @ViewBag.GetAlldesignation)
                    {
                    <tr>
                        <td>
                            @{ i++;}
                            @i
                        <td>
                            @item.DesignationName
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.DesignationId"
                               class="btn btn-outline-info" style="width: 80px;">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.DesignationId"
                               class="btn btn-outline-success" style="width: 80px;">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.DesignationId"
                               class="btn btn-outline-danger" style="width: 80px;">Delete</a>
                        </td>

                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- /.card -->
</div>
