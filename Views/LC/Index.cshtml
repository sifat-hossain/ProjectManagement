
@{
    ViewData["Title"] = "LC";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@if (ViewBag.Message != null)
{
    <partial name="Message" />
}
<div class="col-lg-12">

    <!-- /.card -->
    <div class="card">

        <div class="card-header border-0">
            <button class="btn btn-primary" style="border-radius:20px 5px;" type="button" onclick="location.href='@Url.Action("Create", "LC")'"><b>Create</b></button>
            <hr />
            <center>  <h1 class="card-title"><b>LC List</b></h1></center>
            <hr />
        </div>
        <div class="card-body table-responsive p-0">
            <table class="table table-striped table-valign-middle">
                <thead>
                    <tr>
                        <th>
                            Sl
                        </th>

                        <th>
                            @Html.DisplayName("Project")
                        </th>
                        <th>
                            @Html.DisplayName("LC Opening Date")
                        </th>
                        <th>
                            @Html.DisplayName("Nominated Bank")
                        </th>
                        <th>
                            @Html.DisplayName("Payment Process")
                        </th>
                        <th>
                            @Html.DisplayName("Attachment")
                        </th>
                        <th>
                            @Html.DisplayName("Action")
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 0;}
                    @foreach (var item in @ViewBag.listOfData)
                    {
                        <tr>
                            <td>
                                @{ i++;}
                                @i
                            </td>

                            <td>
                                @item.ProjectName
                            </td>

                            <td>
                                @item.LcopeningDate.ToString("dd MMM, yyyy")
                            </td>
                            <td>
                                @item.NominatedBank
                            </td>
                            <td>
                                @item.PaymentProcess
                            </td>

                            @if (item.LcAttachment == null)
                            {
                                <td style="color: red">No Attachment Found!</td>
                            }
                            else
                            {
                                <td>
                                    <a class="btn btn-outline-primary" href="/File/LCAttachment/@item.LcAttachment" target="_blank">@item.LcAttachment</a>
                                </td>
                            }

                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Lcid">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Lcid">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Lcid">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- /.card -->
</div>
