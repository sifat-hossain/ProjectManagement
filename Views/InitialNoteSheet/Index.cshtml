
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@if (ViewBag.Message != null)
{
    <partial name="Message" />
}

<div class="col-lg-12">

    <!-- /.card -->
    <div class="card">

        <div class="card-header border-0">           
            <center>  <h1 class="card-title"><b>Initial Note Sheet List</b></h1></center>
            <hr />
        </div>

        <div class="card-body border-0 table-responsive-md">
            <button class="btn btn-primary"
                    style="border-radius:20px 5px;"
                    type="button"
                    onclick="location.href='@Url.Action("Create", "InitialNoteSheet")'">
                <i class="fas fa-plus-square"></i>
                <b>New Initial Notesheet</b>
            </button>
            <hr />
            <table class="table table-striped table-valign-middle table-responsive-md" id="initialNSTable">
                <thead>
                    <tr>
                        <th>
                            Sl No
                        </th>
                        <th>
                            @Html.DisplayName("Project Name")
                        </th>
                        <th>
                            @Html.DisplayName("Vendor")
                        </th>
                        <th>
                            @Html.DisplayName("Opening Date")
                        </th>
                        <th>
                            @Html.DisplayName("Subject")
                        </th>
                        <th>
                            @Html.DisplayName("Attachment")
                        </th>
                        <th>
                            @Html.DisplayName("Action")
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 0;}
                    @if (@ViewBag.InitialNoteSheetList != null)
                    {
                        @foreach (var item in @ViewBag.InitialNoteSheetList)
                        {
                            <tr>
                                <td>
                                    @{ i++;}
                                    @i
                                </td>
                                <td>
                                    @item.ProjectName
                                </td>
                                <td>
                                    @item.VendorName
                                </td>
                                <td>
                                    @item.InitialNoteSheetOpeningDate.ToString("MMM dd, yyyy")
                                </td>
                                <td>
                                    @item.InitialNotesheetSubject
                                </td>
                                @if (@item.InitialNotesheetAttachment == null)
                                {
                                    <td style="color: red">No Attachment Found!</td>

                                }
                                else
                                {
                                    <td>
                                        <a class="btn btn-outline-primary" href="/File/InitialNoteSheetAttachment/@item.InitialNotesheetAttachment" target="_blank">Attachment</a>
                                    </td>
                                }


                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.InitialNotesheetId"
                                       class="btn btn-outline-info" style="width: 95px;">
                                        <i class="fas fa-edit"></i>Edit
                                    </a>

                                    <a asp-action="Details" asp-route-id="@item.InitialNotesheetId"
                                       class="btn btn-outline-success" style="width: 95px;">
                                        <i class="fas fa-link"></i>
                                        Details
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@item.InitialNotesheetId"
                                       class="btn btn-outline-danger" style="width: 95px;">
                                        <i class="fas fa-trash"></i>
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }


                    }
                    else
                    {
                        var item = @ViewBag.InitialNoteSheet;

                        <tr>
                            <td>
                                @{ i++;}
                                @i
                            </td>
                            <td>
                                @item.ProjectName
                            </td>
                            <td>
                                @item.VendorName
                            </td>
                            <td>
                                @item.InitialNoteSheetOpeningDate.ToString("MMM dd, yyyy")
                            </td>
                            <td>
                                @item.InitialNotesheetSubject
                            </td>
                            @if (@item.InitialNotesheetAttachment == null)
                            {
                                <td style="color: red">No Attachment Found!</td>

                            }
                            else
                            {
                                <td>
                                    <a class="btn btn-outline-primary" href="/File/InitialNoteSheetAttachment/@item.InitialNotesheetAttachment" target="_blank">Attachment</a>
                                </td>
                            }

                            <td>
                                <a asp-action="Edit" asp-route-id="@item.InitialNotesheetId"
                                   class="btn btn-outline-info" style="width: 95px;">
                                    <i class="fas fa-edit"></i>Edit
                                </a>

                                <a asp-action="Details" asp-route-id="@item.InitialNotesheetId"
                                   class="btn btn-outline-success" style="width: 95px;">
                                    <i class="fas fa-link"></i>
                                    Details
                                </a>

                                <a asp-action="Delete" asp-route-id="@item.InitialNotesheetId"
                                   class="btn btn-outline-danger" style="width: 95px;">
                                    <i class="fas fa-trash"></i>
                                    Delete
                                </a>
                            </td>
                        </tr>


                    }
                </tbody>
            </table>
            <br />
            <div class="card-footer p-0">
                <button class="btn btn-secondary"
                        style="border-radius:5px 20px;"
                        type="button"
                        onclick="javascript:history.go(-1)">
                    <i class="fas fa-backward"></i>
                    <b>Previous</b>
                </button>
            </div>

        </div>
    </div>
    <!-- /.card -->
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#initialNSTable').DataTable();
        });
    </script>
}
