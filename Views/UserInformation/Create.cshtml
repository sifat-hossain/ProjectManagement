@model ProjectManagement.ViewModel.UserInformationViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (ViewBag.Message != null)
{
    <partial name="Message" />
}
<center>
    <div class="col-md-6">
        <div class="card">
            <hr />
            <div class="card-header p-2"><h1><b>Create New User</b></h1> </div><!-- /.card-header -->
            <div class="card-body">
                <div class="tab-content">
                    <!-- /.tab-pane -->
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <label class="control-label col-md-3">Name</label>
                            <input asp-for="UserName" class="form-control col-md-6" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3">Project Name</label>
                            <select asp-for="DesignationId" class="form-control col-md-6" asp-items="@(new SelectList(@ViewBag.Designation,"DesignationId","DesignationName"))">
                                <option value="" selected disabled> Please Select Designation</option>
                            </select>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3">Email</label>
                            <input asp-for="UserEmail" class="form-control col-md-6" />
                            <span asp-validation-for="UserEmail" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3">Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control col-md-6" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label class="control-label col-md-3">Role</label>
                            <select asp-for="UserRoleId" class="form-control col-md-6" asp-items="@(new SelectList(@ViewBag.UserRole,"UserRoleId","UserRoleName"))">
                                <option value="" selected disabled> Please Select Role</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</center>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

