
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Message != null)
{
    <partial name="Message" />
}
<div class="col-lg-12">

    <!-- /.card -->
    <div class="card">

        <div class="card-header border-0">
            <button class="btn btn-primary" style="border-radius:20px 5px;" type="button" onclick="location.href='@Url.Action("Create", "Bureau")'"><b>Create</b></button>
            <hr />
            <center>  <h1 class="card-title"><b>Bureau List</b></h1></center>
            @*<div class="card-tools">
                    <a href="#" class="btn btn-tool btn-sm">
                        <i class="fas fa-download"></i>
                    </a>
                    <a href="#" class="btn btn-tool btn-sm">
                        <i class="fas fa-bars"></i>
                    </a>
                </div>*@

            <hr />
        </div>
        <div class="card-body table-responsive p-0">
            <table class="table table-striped table-valign-middle">
                <thead>
                    <tr>
                        <th>
                            Sl No
                        </th>
                        <th>
                            @Html.DisplayName("Bureau Name")
                        </th>
                        <th>
                            @Html.DisplayName("Bureau Full Name")
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 0;}
                    @foreach (var item in @ViewBag.GetAllBureau)
                    {
                        <tr>
                            <td>
                                @{ i++;}
                                @i
                            </td>
                            <td>
                                @item.BureauName
                            </td>
                            <td>
                                @item.BureauFullName
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.BureauId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.BureauId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.BureauId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- /.card -->
</div>
