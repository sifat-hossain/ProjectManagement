@model ProjectManagement.ViewModel.RankTypeViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<hr />

@if (ViewBag.Message != null)
{
    <partial name="Message" />
}
<center>
    <div class="col-md-6">
        <div class="card">
            <hr />
            <div class="card-header p-2"><h1><b>Create New Service</b></h1> </div><!-- /.card-header -->
            <div class="card-body">
                <div class="tab-content">
                    <!-- /.tab-pane -->
                    <form class="form-horizontal" method="post" asp-action="Create" asp-controller="RankType">
                        <div class="form-group row">
                            <label class="control-label col-md-3">Service Name </label>
                            <input asp-for="RankTypeName" class="form-control col-md-6" />
                            <span asp-validation-for="RankTypeName" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <div class="offset-sm-1 col-sm-10">
                                <input type="submit" class="btn btn-success" />
                            </div>
                        </div>
                    </form>
                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</center>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
