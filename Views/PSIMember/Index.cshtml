
@{
    ViewData["Title"] = "LC";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@if (ViewBag.Message != null)
{
    <partial name="Message" />
}
<div class="col-lg-12">

    <!-- /.card -->
    <div class="card">

        <div class="card-header border-0">
            <button class="btn btn-primary" style="border-radius:20px 5px;" type="button" onclick="location.href='@Url.Action("Create", "PSIMember")'"><b>Create</b></button>
            <hr />
            <center>  <h1 class="card-title"><b>LC List</b></h1></center>
            <hr />
        </div>
        <div class="card-body table-responsive p-0">
            <table class="table table-striped table-valign-middle">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayName("User")
                        </th>
                        <th>
                            @Html.DisplayName("Project")
                        </th>
                        <th>
                            @Html.DisplayName("PsiMemberCreateDate")
                        </th>


                        <th>
                            @Html.DisplayName("Action")
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @ViewBag.PsiMemberList)
                    {
                        <tr>
                            <td>
                                @item.UserName
                            </td>
                            <td>
                                @item.ProjectName
                            </td>
                            <td>
                                @item.PsiMemberCreateDate.ToString("dd MMM, yyyy")
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.PsiMemberId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.PsiMemberId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.PsiMemberId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- /.card -->
</div>
